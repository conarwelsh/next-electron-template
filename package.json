{
  "name": "next-electron-template",
  "version": "0.0.1",
  "description": "Template for next.js and electron, with electron-forge",
  "main": "src/main/index.js",
  "repository": "git@github.com:conarwelsh/next-electron-template.git",
  "author": "Conar Welsh <conarw@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "next build && next export -o .dist/static",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "lint": "next lint",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^15.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "next": "^11.1.2",
    "prettier": "2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "next-electron-template"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
